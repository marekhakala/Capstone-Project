<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_item_today_exchange_rates_layout_height">

    <TextView
        android:id="@+id/widget_item_today_exchange_rates_c1_in_c2_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/WidgetItemTodayExchangeRatesText"
        android:text="@string/exchange_rates_c1_in_c2_text" />

    <TextView
        android:id="@+id/widget_item_today_exchange_rates_c1_in_c2_value"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/WidgetItemTodayExchangeRatesValue"
        android:text="@string/exchange_rates_c1_in_c2_value" />
</LinearLayout>