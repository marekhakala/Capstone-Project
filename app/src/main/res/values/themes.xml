<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NomadList.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/drawer_selected</item>
        <item name="material_drawer_selected_text">@color/drawer_selected_text</item>
    </style>

    <style name="Theme.NomadList.Splash" parent="Theme.NomadList.Base">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Theme.NomadList" parent="Theme.NomadList.Base" />
    <style name="Theme.NomadList.Filter" parent="Theme.NomadList.Base" />
    <style name="Theme.NomadList.Search" parent="Theme.NomadList.Base" />
    <style name="Theme.NomadList.Detail" parent="Theme.NomadList.Base" />
    <style name="Theme.NomadList.About" parent="Theme.NomadList.Base" />
    <style name="Theme.NomadList.ExchangeRates" parent="Theme.NomadList.Base" />
    <style name="Theme.NomadList.Settings" parent="Theme.NomadList.Base" />
</resources>